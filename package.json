{
	"name": "vue-exercise",
	"version": "1.0.0",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite",
		"build": "run-p type-check build-only",
		"preview": "vite preview",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"test-with-coverage": "vitest --coverage.enabled true",
		"build-only": "vite build",
		"type-check": "vue-tsc --noEmit -p tsconfig.json --composite false",
		"lint": "eslint .",
		"deploy": "gh-pages -d dist"
	},
	"dependencies": {
		"pinia": "^2.3.1",
		"vue": "^3.5.13",
		"vue-router": "^4.4.5"
	},
	"devDependencies": {
		"@eslint/js": "^9.18.0",
		"@rushstack/eslint-patch": "^1.10.5",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^22.10.7",
		"@vitejs/plugin-vue": "^5.2.1",
		"@vitest/coverage-v8": "^2.1.8",
		"@vue/eslint-config-typescript": "^14.3.0",
		"@vue/test-utils": "^2.4.6",
		"@vue/tsconfig": "^0.7.0",
		"eslint": "^9.18.0",
		"eslint-plugin-vue": "^9.32.0",
		"gh-pages": "^6.3.0",
		"jsdom": "^26.0.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.0.7",
		"vitest": "^2.1.8",
		"vue-tsc": "^2.2.0"
	}
}
